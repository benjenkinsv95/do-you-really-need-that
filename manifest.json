{
  "name": "Do You Really Need This?",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Promotes investing & donations when attempting to make online purchases.",
  "homepage_url": "https://github.com/benjenkinsv95/do-you-really-need-this",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "https://www.amazon.com/*",
    "https://smile.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://smile.amazon.com/*"
      ],
      "css":        [
        "materialize/css/roboto.css",
        "materialize/css/materialize.min.css",
        "css/index.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "materialize/js/materialize.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
